#!/bin/bash

# update working tree
cd {{pod_dir}}/apps/{{app}}
env -i git pull

# if has .podhook, execute that; otherwise default
if [ -f .podhook ]; then
	bash .podhook
if [ -f package.json ]; then
	npm install
fi

# pod restart will not use latest env variables in config
pod stop {{app}}
pod start {{app}}