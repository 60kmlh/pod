#!/bin/bash

# update working tree
cd {{pod_dir}}/apps/{{app}}
env -i git pull

# if has .podhook, execute that; otherwise default
if [ -f .podhook ]; then
	bash .podhook
else
	npm install --development
fi

# pod restart will not use latest env variables in config
pod stop {{app}}
pod cleanlogs {{app}}
pod start {{app}}